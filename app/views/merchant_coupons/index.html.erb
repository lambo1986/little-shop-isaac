<h1><%= @merchant.name %>'s Coupons:</h1>

<h2><%= link_to "Create New Coupon", "/merchants/#{@merchant.id}/coupons/new" %>

<h3><% @merchant_coupons.each do |coupon| %>
  <p>Name: <%= link_to "#{coupon.name}", "/merchants/#{@merchant.id}/coupons/#{coupon.id}" %></p>
  <ul>
    <li>Code: <%= coupon.code %></li>
    <li>% Off: <%= coupon.percent_off %></li>
    <li>$ Off: <%= coupon.dollar_off %></li>
    <li>Active? <%= coupon.active %></li>
  </ul>
<% end %></h3>  
